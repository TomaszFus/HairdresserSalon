@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
<ul class="list-group list-group-horizontal">
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Visit" asp-action="CustomerIndex">Moje wizyty</a>
    </li>
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Visit" asp-action="VisitsHistory">Historia wizyt</a>
    </li>
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">Zarządzenie kontem</a>
    </li>
</ul>
<h2>Zarządzanie kontem</h2>

<div>
    <h4>Zmień ustawienia swojego konta</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
