@model HairdresserSalon.Models.OpeningHourModel
@{
    ViewData["Title"] = "Zmień godzinę";
    Layout = "~/Views/Shared/_LayoutEmploee.cshtml";
}

<h1>Modyfikuj</h1>

<div class="row">
    <div class="col-md-3">
        <form asp-action="Edit">
            <div class="form-group">
                <label class="form-label" asp-for="Open"></label>
                
                <input class="form-control" type="time" id="hourOpen" name="hourOpen" required>
                
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Close"></label>
                
                <input class="form-control" type="time" id="hourClose" name="hourClose" required>
                
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="IsOpen"></label>
                <input class="form-control" asp-for="IsOpen" />
                
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Zapisz zmiany" />
