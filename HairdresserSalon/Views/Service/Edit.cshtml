@model HairdresserSalon.Models.ServiceModel
@{
    ViewData["Title"] = "Edytuj usługę";
    Layout = "~/Views/Shared/_LayoutEmploee.cshtml";
}

<h1>Modyfikuj</h1>

<div class="row">
    <div class="col-md-3">
        <form asp-action="Edit">
            <div class="form-group">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <div>
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Price"></label>
                <input class="form-control" asp-for="Price" />
                <div>
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Duration"></label>
                <input class="form-control" asp-for="Duration" />
                <div>
                    @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Zapisz zmiany" />
                <a class="btn btn-primary" asp-action="Index">Anuluj</a>
            </div>
        </form>
    </div>
</div>

