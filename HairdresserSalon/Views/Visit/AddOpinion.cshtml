@model HairdresserSalon.Models.VisitModel

@{
    ViewData["Title"] = "Oceń wizytę";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="list-group list-group-horizontal">
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Visit" asp-action="CustomerIndex">Moje wizyty</a>
    </li>
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Visit" asp-action="VisitsHistory">Historia wizyt</a>
    </li>
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Opinie</a>
    </li>
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </li>
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">ustawienia</a>
    </li>
</ul>

<h1>Dodaj opinie</h1>
<div class="row">
    <div class="col-md-8">
        <form asp-action="AddOpinion">
            <div class="form-group">
                <label class="form-label" asp-for="Opinion.Rating"></label>
                <div class="form-check">
                    1 @Html.RadioButtonFor(m => m.Opinion.Rating, 1)
                    2 @Html.RadioButtonFor(m => m.Opinion.Rating, 2)
                    3 @Html.RadioButtonFor(m => m.Opinion.Rating, 3)
                    4 @Html.RadioButtonFor(m => m.Opinion.Rating, 4)
                    5 @Html.RadioButtonFor(m => m.Opinion.Rating, 5)
                </div>
                @if (TempData["Error"] != null)
                {
                    <div class="row">
                        <div class="col-lg">
                            <div class="rounded pg-3 alert-danger">
                                @TempData["Error"].ToString()
                            </div>
                        </div>
                    </div>
                }

                <label class="form-label" asp-for="Opinion.Description"></label>
                <textarea class="form-control" asp-for="Opinion.Description" cols="50" rows="5"></textarea>

                @*<input asp-for="Opinion.Rating" />*@



            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Dodaj" />
                <input class="btn btn-primary" asp-action="VisitsHistory" type="submit" value="Anuluj" />
            </div>
        </form>
    </div>
</div>


